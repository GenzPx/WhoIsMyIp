  <main class="container">
    <div class="card">
      <h2>Network Details</h2>
      <div id="loading">‚è≥ Fetching data...</div>
      <div class="info-row"><span class="info-label">IP Address:</span> <span id="ip">-</span></div>
      <div class="info-row"><span class="info-label">Location:</span> <span id="location">-</span></div>
      <div class="info-row"><span class="info-label">Coordinates:</span> <span id="coords">-</span></div>
      <div class="info-row"><span class="info-label">ISP/Org:</span> <span id="org">-</span></div>
      <button class="refresh-btn" onclick="window.location.reload()">üîÅ Refresh Info</button>
    </div>

    <div class="card">
      <h2>Your Location</h2>
      <div id="map"></div>
    </div>
